<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_height="match_parent"
	android:gravity="center"
	android:orientation="vertical">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="top|center">

		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<ListView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:divider="@null"
				android:id="@+id/xiangqmeinListView1"/>

			<ProgressBar
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/tab1ProgressBar2"
				android:layout_alignBottom="@id/xiangqmeinListView1"
				android:layout_marginBottom="46dp"/>

		</RelativeLayout>

		<ProgressBar
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/tab1ProgressBar1"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="此处内容可能会加载慢，请耐心等待"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textSize="14sp"
			android:id="@+id/tab1TextView1"/>

		<Button
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="重新加载"
			android:id="@+id/tab1Button1"
			android:background="#00000000"/>

	</LinearLayout>

</LinearLayout>

